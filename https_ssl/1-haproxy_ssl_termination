global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon
    tune.ssl.default-dh-param 2048
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

# HTTP frontend: redirect all HTTP traffic to HTTPS
frontend http_front
    bind *:80
    mode http
    redirect scheme https code 301

# HTTPS frontend: terminate SSL
frontend https_front
    bind *:443 ssl crt /etc/letsencrypt/live/www.holberton.online/haproxy.pem
    mode http
    default_backend web_back

# Backend web servers
backend web_back
    balance roundrobin
    server web-01 54.84.15.122:80 check
    server web-02 3.87.208.156:80 check

