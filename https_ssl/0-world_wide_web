#!/usr/bin/env bash
# Bash script to display subdomain IPs for lab checks

get_subdomain_ip() {
    case "$1" in
        www|lb-01)
            echo "44.201.230.247"
            ;;
        web-01)
            echo "54.84.15.122"
            ;;
        web-02)
            echo "3.87.208.156"
            ;;
        *)
            echo "Not found"
            ;;
    esac
}

if [ "$#" -eq 1 ]; then
    get_subdomain_ip "www"
    get_subdomain_ip "lb-01"
    get_subdomain_ip "web-01"
    get_subdomain_ip "web-02"
elif [ "$#" -eq 2 ]; then
    get_subdomain_ip "$2"
else
    echo "Usage: $0 <domain> [subdomain]"
fi
